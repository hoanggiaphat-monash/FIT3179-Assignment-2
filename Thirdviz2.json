{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 3 Australian States by Latest Employment-to-Population (%)",
    "subtitle": "",
    "color": "#001f3f",
    "subtitleColor": "#6b7280",
    "fontSize": 20,
    "subtitleFontSize": 12,
    "anchor": "start",
    "offset": 20
  },
  "width": 700,
  "height": 260,
  "data": {
    "url": "https://raw.githubusercontent.com/hoanggiaphat-monash/FIT3179-Assignment-2/refs/heads/main/clean_state_labour_force_page2.csv"
  },
  "transform": [
    {
      "aggregate": [
        { "op": "mean", "field": "Latest_Employment_to_pop_pct", "as": "latest_emp_pct" }
      ],
      "groupby": ["State"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "latest_emp_pct", "order": "descending"}]
    },
    { "filter": "datum.rank <= 3" }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadiusEnd": 6,
        "opacity": 1
      },
      "encoding": {
        "y": {
          "field": "State",
          "type": "nominal",
          "title": "State",
          "sort": "-x",
          "axis": {
            "labelFontSize": 12,
            "titleFontSize": 13,
            "labelColor": "#001f3f",
            "titleColor": "#001f3f",
            "titleFontWeight": 600
          }
        },
        "x": {
          "field": "latest_emp_pct",
          "type": "quantitative",
          "title": "Employment-to-Population (%)",
          "axis": {
            "format": ".1f",
            "grid": true,
            "gridColor": "#e5e7eb",
            "gridOpacity": 0.5,
            "labelFontSize": 11,
            "titleFontSize": 12,
            "labelColor": "#374151",
            "titleColor": "#001f3f",
            "titleFontWeight": 600
          }
        },
        "color": {
          "field": "latest_emp_pct",
          "type": "quantitative",
          "scale": {
            "range": ["#BC8F8F", "#8B6F6F", "#001f3f"]
          },
          "legend": null
        },
        "tooltip": [
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "latest_emp_pct", "type": "quantitative", "title": "Employment-to-Population (%)", "format": ".2f" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 8,
        "baseline": "middle",
        "fontSize": 13,
        "fontWeight": 600
      },
      "encoding": {
        "y": { "field": "State", "type": "nominal", "sort": "-x" },
        "x": { "field": "latest_emp_pct", "type": "quantitative" },
        "text": { "field": "latest_emp_pct", "type": "quantitative", "format": ".2f" },
        "color": { "value": "#001f3f" }
      }
    }
  ],
  "config": {
    "background": "#ffffff",
    "view": { "stroke": null },
    "axis": {
      "domainColor": "#d1d5db",
      "tickColor": "#d1d5db"
    }
  }
}