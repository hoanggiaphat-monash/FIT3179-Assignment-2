{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 3 Most Expensive Majors in Australia",
    "subtitle": "Based on Average Total Estimated Cost (in thousand AUD) ",
    "color": "#001f3f",
    "subtitleColor": "#6b7280",
    "fontSize": 20,
    "subtitleFontSize": 12,
    "anchor": "start",
    "offset": 20
  },
  "width": 700,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/hoanggiaphat-monash/FIT3179-Assignment-2/refs/heads/main/International_Education_Costs.csv"
  },
  "transform": [
    {"filter": "datum.Country == 'Australia'"},
    {
      "aggregate": [
        {"op": "mean", "field": "Total_Est_AUD", "as": "avg_total_aud"}
      ],
      "groupby": ["Program"]
    },
    {"calculate": "datum.avg_total_aud / 1000", "as": "avg_total_aud_k"},
    {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "avg_total_aud_k", "order": "descending"}]},
    {"filter": "datum.rank <= 3"}
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadiusEnd": 6,
        "opacity": 1
      },
      "encoding": {
        "y": {
          "field": "Program",
          "type": "nominal",
          "sort": "-x",
          "title": "Program (Major)",
          "axis": {
            "labelFontSize": 12,
            "titleFontSize": 13,
            "labelColor": "#001f3f",
            "titleColor": "#001f3f",
            "titleFontWeight": 600
          }
        },
        "x": {
          "field": "avg_total_aud_k",
          "type": "quantitative",
          "title": "Average Total Estimated Cost (AUD × 1,000)",
          "axis": {
            "grid": true,
            "gridColor": "#e5e7eb",
            "gridOpacity": 0.5,
            "format": ",.0f",
            "labelFontSize": 11,
            "titleFontSize": 12,
            "labelColor": "#374151",
            "titleColor": "#001f3f",
            "titleFontWeight": 600
          }
        },
        "color": {
          "field": "avg_total_aud_k",
          "type": "quantitative",
          "scale": {
            "range": ["#BC8F8F", "#8B6F6F", "#001f3f"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "Program", "type": "nominal", "title": "Program"},
          {"field": "avg_total_aud_k", "type": "quantitative", "title": "Avg Total Cost (×1,000 AUD)", "format": ",.1f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 8,
        "baseline": "middle",
        "fontSize": 13,
        "fontWeight": 600
      },
      "encoding": {
        "y": {"field": "Program", "type": "nominal", "sort": "-x"},
        "x": {"field": "avg_total_aud_k", "type": "quantitative"},
        "text": {"field": "avg_total_aud_k", "type": "quantitative", "format": ",.1f"},
        "color": {"value": "#001f3f"}
      }
    }
  ],
  "config": {
    "background": "#ffffff",
    "view": {"stroke": null},
    "axis": {
      "domainColor": "#d1d5db",
      "tickColor": "#d1d5db"
    }
  }
}